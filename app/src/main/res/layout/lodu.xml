<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:elevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_loduimage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:src="@drawable/lodukingicon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_loduname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="lodu king ll"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_loduimage"
                app:layout_constraintTop_toTopOf="@+id/iv_loduimage" />

            <TextView
                android:id="@+id/tv_lodudate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 oct 22, 22:12"
                android:layout_margin="5dp"
                android:textSize="19dp"
                app:layout_constraintStart_toEndOf="@+id/iv_loduimage"
                app:layout_constraintTop_toBottomOf="@+id/tv_loduname" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="TOTAL PRIZE"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ENTRY FEE"
                android:gravity="center"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_prize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_sans_semibold"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_entryfee"
                android:layout_width="0dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="60"
                android:gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="JOINING TYPE"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="BOARD TYPE"
                android:gravity="center"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_joiningtypre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="singel"
                android:fontFamily="@font/nunito_sans_semibold"
                android:gravity="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_bordtype"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_sans_semibold"
                android:layout_height="wrap_content"
                android:text="lodu king"
                android:gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/prograssbar"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="10dp"
                style="?android:attr/progressBarStyleHorizontal"/>
            <TextView
                android:id="@+id/tv_emptyspot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/2 spot empty"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_joinButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="winner"
                android:gravity="center"
                android:fontFamily="@font/nunito_sans_bold"
                android:paddingBottom="3dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/button_bg"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/purple_200">

            <TextView
                android:id="@+id/tv_remaintime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans_semibold"
                android:gravity="center"
                android:text="2 hours 34 minute"
                android:textSize="15sp"/>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>